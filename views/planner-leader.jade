extends layout

block content
  script(type='text/javascript').
    var objMeeting = !{JSON.stringify(meeting)}
  #banner.page-header  
    .row
      .col-lg-8
       .col-lg-2
        <i id="icon" class="fa fa-group" style="text-shadow: rgb(0, 105, 95) 0px 0px 0px, rgb(0, 111, 101) 1px 1px 0px, rgb(0, 118, 107) 2px 2px 0px, rgb(0, 124, 113) 3px 3px 0px, rgb(0, 131, 119) 4px 4px 0px, rgb(0, 137, 124) 5px 5px 0px, rgb(0, 144, 130) 6px 6px 0px; font-size: 80px; color: rgb(255, 255, 255); height: 115px; width: 115px; line-height: 115px; border-radius:50% ; text-align: center; background-color: rgb(0, 150, 136);"></i> 
       .col-md-5
        div(class = "headWrapper" style = "margin-top: 25px; margin-left: 5px;")
         h1(style = "color: #009688;") HuddleHere
          br
         h4(style = "color: #757575;") Make Group Projects Easy!
  hr(style="background-color: #BDBDBD;")  
  .row
    .col-xs-12.col-sm-4
      .panel.panel-primary
        .panel-heading
          h2.panel-title Links:
        .panel-body(style="word-break:break-all;")
          h2.panel-title Members link:
            .div
              a(id = "memURL")
          br
          h2.panel-title Coach link:
            .div
              a(id = "coachURL")
      .panel.panel-primary
        .panel-heading
          h2.panel-title Team Status:
        .panel-body
           each member in meeting.members
            if member == ""
                span.memberStatus No Members!
            if member != ""
              p= member.split(';')[0] + ': '
                span.memberStatus= member.split(';')[1]
    .col-xs-12.col-sm-4
      .panel.panel-primary
        .panel-heading
          h2.panel-title Format: #{meeting.format}
        .panel-body
          p Leader: #{meeting.leader}
      .panel.panel-primary
        .panel-heading
          h2.panel-title Time:
        .panel-body
          p Start:&nbsp;
            span#meetingStart
          p End:&nbsp;
            span#meetingEnd
      .panel.panel-primary
        .panel-heading
          h2.panel-title Location:
        .panel-body
          p#streetAddress
          p#cityState
    .col-xs-12.col-sm-4.location-map
      .panel.panel-primary
        .panel-heading
          h2.panel-title Map:
        .panel-body
          img.img-responsive.img-rounded(src='http://maps.googleapis.com/maps/api/staticmap?center=#{meeting.location[0]},#{meeting.location[1]}&zoom=17&size=350x350&sensor=false&markers=#{meeting.location[0]},#{meeting.location[1]}&scale=2') 
  .row
    .col-xs-12.col-sm-4
    .col-xs-12.col-sm-8
      .panel.panel-primary
        .panel-heading
          h2.panel-title Objectives:
        .panel-body
          div
          .row
            .col-md-4 
              div(id= "agendaErrBox")
            div(class=" col-md-4 text-center")
              h3 Agenda Items 
            .col-md-4
          .row
            .col-md-3
            div(class="col-md-6 text-center")
              .col-md-4
                div(style = "float: left;")
                  a(class = "btn btn-primary btn-raised" type = "button" id="addAgendaBtn") Create
              div(class="col-md-4 text-center")
                div(id = "agendaSuccessBox")
              .col-md-4
                div(style = "float: right;")
                  a(class = "btn btn-primary btn-raised" type="button", id="submitAgenda") Submit
            .col-md-3
          .row
            hr
          .div
            div(id="agendaItems")  
            
  script(src='/javascripts/leaderValidate.js') 
  script(src='/javascripts/planner-leader.js') 
  script(src='/javascripts/geo.js')
  script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyC-vUxYe3poWbJS5fqIDwRf2c0CNk4kXwo&callback=geoInitialize')
  script(src='/javascripts/coachTimes.js')